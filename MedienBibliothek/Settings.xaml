<Window x:Class="MedienBibliothek.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="234" Width="426">
    <Grid>
        <Label Content="mkv video folder path" HorizontalAlignment="Left" Margin="10,28,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="VideoFolderPathBox" HorizontalAlignment="Left" Height="23" Margin="147,30.96,0,0" TextWrapping="Wrap" Text="video folder path" VerticalAlignment="Top" Width="180"/>
        
        <Label Content="vlc exec path" HorizontalAlignment="Left" Margin="10,73,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="VlcExecPathBox" HorizontalAlignment="Left" Height="23" Margin="147,77,0,0" TextWrapping="Wrap" Text="video folder path" VerticalAlignment="Top" Width="180"/>
        <Button Content="Save" HorizontalAlignment="Left" Margin="333,173.04,0,0" VerticalAlignment="Top" Width="75" Click="SaveClick"/>
        <Button Content="Close" HorizontalAlignment="Left" Margin="10,173.04,0,0" VerticalAlignment="Top" Width="75" Click="CloseClick"/>
        <Button Content="Browse" HorizontalAlignment="Left" Margin="343,31,0,0" VerticalAlignment="Top" Width="65" Click="BrowseVideoPathClick"/>
        <Button Content="Browse" HorizontalAlignment="Left" Margin="343,76,0,0" VerticalAlignment="Top" Width="65" Click="BrowseVlcExecPathClick"/>

    </Grid>
</Window>
