<Window x:Class="MedienBibliothek.View.JdownloaderViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controller="clr-namespace:MedienBibliothek.Controller" 
        Title="JdownloaderViewWindow" Height="178" Width="392">
    <Grid Name="mainGridView">
        <Grid.DataContext>
            <Controller:JdownloaderWindowViewModel/>
        </Grid.DataContext>
        <Label Content="Name of Video" HorizontalAlignment="Left" Margin="24,20,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Text="{Binding Path=JdownloaderRenameName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="23" Margin="140,23,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="219"/>
        <Button Command="{Binding Path=RenameAndMoveCommand}" Content="{Binding Path=RenameAndMoveButton}" HorizontalAlignment="Left" Margin="247,107,0,0" VerticalAlignment="Top" Width="112"/>
        <CheckBox Content="{Binding Path=CheckBox720P}" HorizontalAlignment="Left" Margin="35,107,0,0" VerticalAlignment="Top"/>
        <CheckBox Content="{Binding Path=CheckBox1080P}" HorizontalAlignment="Left" Margin="150,107,0,0" VerticalAlignment="Top"/>


    </Grid>
</Window>
